<MSwiper Height="300"
         SpaceBetween="24"
         CenteredSlides
         Virtual
         SlidesPerView="2">
    @foreach (var slide in _slides)
    {
        <MSwiperSlide Class="d-flex align-center justify-center surface-container-highest">
            <h3>@slide</h3>
        </MSwiperSlide>
    }
    
    <MSwiperPagination Type="SwiperPaginationType.Fraction" />
    <MSwiperNavigation />
</MSwiper>

@code {

    private readonly List<string> _slides = Enumerable.Range(1, 500).Select(i => $"Slide {i}").ToList();

}