<MContainer>
    <MRow>
        <MCol Cols="12" Sm="6">
            <MTextField Type="number" @bind-Value="value1" Filled Label="Basic"></MTextField>
        </MCol>
        <MCol Cols="12" Sm="6">
            <MTextField Type="number" @bind-Value="value2" Filled Label="Min 1, Max 10, Step 0.1"
                        NumberProps="@(prop => { prop.Min = 1; prop.Max = 10; prop.Step = 0.1m; })">
            </MTextField>
        </MCol>
        <MCol Cols="12" Sm="6">
            <MTextField Type="number" @bind-Value="value3" Filled
                        Label="Hide control"
                        NumberProps="@(prop => { prop.HideControl = true; })">
            </MTextField>
        </MCol>
        <MCol Cols="12" Sm="6">
            <MTextField Type="number" @bind-Value="value4" Filled
                        Label="Precision 0.00, Step 0.01"
                        NumberProps="@(prop => { prop.Precision = 2; prop.Step = 0.01m; })">
            </MTextField>
        </MCol>
    </MRow>
</MContainer>

@code {
    int value1 = 1;
    double value2 = 1d;
    decimal value3 = 1m;
    decimal value4 = 1.1m;
}