<MForm>
    <MAutocomplete @bind-Value="selected"
                   Items="@items"
                   ItemText="item => item"
                   ItemValue="item => item"
                   Chips
                   Label="To"
                   FullWidth
                   HideDetails=true
                   HideNoData
                   HideSelected
                   Multiple
                   SingleLine>
    </MAutocomplete>
    <MDivider></MDivider>
    <MTextField Label="Subject"
                @bind-Value="@subject"
                SingleLine
                FullWidth
                HideDetails=true>
    </MTextField>
    <MDivider></MDivider>
    <MTextarea @bind-Value="title"
               Label="Message"
               Counter=true
               FullWidth
               SingleLine
               maxlength="120">
    </MTextarea>
</MForm>

@code {

    readonly List<string> items = new() { "Trevor Handsen", "Alex Nelson" };

    List<string> selected = new() { "Trevor Handsen" };

    string subject = "Plans for the weekend";

    string title = "Hi,\nI just wanted to check in and see if you had any plans the upcoming weekend. We are thinking of heading up to Napa";

}