<PEnqueuedSnackbars @ref="_enqueuedSnackbars">
</PEnqueuedSnackbars>

<MButton OnClick="AddToast"> Add Toast </MButton>

@code {
    PEnqueuedSnackbars? _enqueuedSnackbars;

    private Task AddToast()
    {
        var now = DateTime.Now.ToString("HH:mm:ss.fff");
        var alertType = Random.Shared.NextInt64(0, 5);
        var dark = Random.Shared.NextInt64(0, 2);
        var config = new ToastConfig()
        {
            // Title = $"Add Toast by Click",
            Content = $"create time: {now}",
            Dark = dark == 0,
            Type = (AlertTypes)alertType
        };

        _enqueuedSnackbars?.AddToast(config);

        return Task.CompletedTask;
    }
}