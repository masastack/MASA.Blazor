<MContainer Fluid>
    <MCheckbox
        @bind-Value="checkbox1"
        TrueValue='"Yes"'
        FalseValue='"No"'
        Label="@($"Checkbox 1: {checkbox1}")">
    </MCheckbox>
    <MCheckbox
        @bind-Value="checkbox2"
        TrueValue="1"
        FalseValue="0"
        Label="@($"Checkbox 2: {checkbox2.ToString()}")">
    </MCheckbox>
</MContainer>

@code {

    string checkbox1 = "Yes";
    int checkbox2 = 1;

}
