<MRow>
    <MCol Cols="4">
        <MList Dense>
            <MSortable Items="@_items1"
                       ItemKey="u => u"
                       Group="people"
                       GhostClass="accent">
                <MListItem>@context</MListItem>
                <MDivider/>
            </MSortable>
        </MList>
    </MCol>
    <MCol Cols="4">
        <MList Dense>
            <MSortable Items="@_items2"
                       ItemKey="u => u"
                       Group="people"
                       GhostClass="accent">
                <MListItem>@context</MListItem>
                <MDivider/>
            </MSortable>
        </MList>
    </MCol>
    <MCol Cols="4">
        <MList Dense>
            <MSortable Items="@_animals"
                       ItemKey="u => u"
                       Group="animals"
                       GhostClass="secondary">
                <MListItem>@context</MListItem>
                <MDivider/>
            </MSortable>
        </MList>
    </MCol>
</MRow>

