<MCard
    Flat
    Color="transparent"
  >
    <MSubheader>Min and max default slider</MSubheader>

    <MCardText>
      <MRow>
        <MCol Class="pr-4">
          <MSlider
            @bind-Value="_slider"
            Class="align-center"
            Max="_max"
            Min="_min"
            HideDetails="true"
          >
            <AppendContent>
              <MTextField
                @bind-Value="_slider"
                Class="mt-0 pt-0"
                HideDetails="true"
                SingleLine
                Type="number"
                Style="width: 60px"
              ></MTextField>
            </AppendContent>
          </MSlider>
        </MCol>
      </MRow>
    </MCardText>
  </MCard>

  @code{
    private double _min = -50;
    private double _max = 90;
    private double _slider = 40;
  }