<div class="text-center ma-2">
    <MButton OnClick="@(() => snackbar = true)">
        Open Snackbar
    </MButton>
    <MSnackbar @bind-Value="snackbar">
        <ChildContent>
            Hello, I'm a snackbar
        </ChildContent>
        <ActionContent>
            <MButton Icon OnClick="@(() => snackbar = false)">
                <MIcon>mdi-close</MIcon>
            </MButton>
        </ActionContent>
    </MSnackbar>
</div>

@code {
    private bool snackbar;
}