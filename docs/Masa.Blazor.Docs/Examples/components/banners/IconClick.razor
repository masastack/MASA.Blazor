<MBanner SingleLine OnIconClick="Alert">
	<IconContent>
		<MIcon Color="warning" Size="36">mdi-wifi-strength-alert-outline
		</MIcon>
	</IconContent>
	<ChildContent>
		Unable to verify your Internet connection
	</ChildContent>
	<ActionsContent>
		<MButton Text Color="primary">
			Connection Settings
		</MButton>
	</ActionsContent>
</MBanner>

@code
{
	[Inject]
	private IJSRuntime Js { get; set; }

	private void Alert()
	{
		Js.InvokeVoidAsync("alert", "Hello world!");
	}
}