<MCard MaxHeight="300" Class="overflow-auto">
    <MToolbar Flat Color="primary">
        <MToolbarTitle>
            My Document
        </MToolbarTitle>
        <MSpacer>
        </MSpacer>
        <MSwitch Label="Sticky Banner" HideDetails="true"
                 @bind-Value="_sticky" Dark>
        </MSwitch>
    </MToolbar>
    <MBanner SingleLine Sticky="_sticky">
        <ChildContent>
            We can't save your edits while you are in offline mode.
        </ChildContent>
        <ActionsContent>
            <MButton Text Color="deep-purple accent-4">
                Get Online
            </MButton>
        </ActionsContent>
    </MBanner>
    <MCardText Class="grey lighten-4">
        <MSheet MaxWidth="800" Height="300" Class="mx-auto">
        </MSheet>
    </MCardText>
</MCard>

@code
{
    private bool _sticky = true;
}