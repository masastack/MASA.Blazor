@namespace Masa.Blazor.Docs.Examples.components.lists

<MList Dense="@Dense"
       TwoLine="@TwoLine"
       ThreeLine="@ThreeLine">
    @for (int i = 0; i < 3; i++)
    {
        var index = i;
        <MListItem PrependAvatar="@(ShowAvatar ? "https://cdn.masastack.com/stack/images/website/masa-blazor/lists/1.png" : "")"
                   Title="@($"Item {index}")"
                   Subtitle="Lorem ipsum dolor sit amet consectetur adipisicing elit">
        </MListItem>
    }
</MList>

@code {

    [Parameter]
    public bool Dense { get; set; }

    [Parameter]
    public bool TwoLine { get; set; }

    [Parameter]
    public bool ThreeLine { get; set; }

    [Parameter]
    public bool ShowAvatar { get; set; }

}
