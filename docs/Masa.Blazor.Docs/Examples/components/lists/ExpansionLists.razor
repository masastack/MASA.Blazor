<MCard Class="mx-auto"
       MaxWidth="500">
    <MToolbar Color="teal"
              Dark>
        <MAppBarNavIcon></MAppBarNavIcon>

        <MToolbarTitle>Topics</MToolbarTitle>

        <MSpacer></MSpacer>

        <MButton Icon>
            <MIcon>mdi-dots-vertical</MIcon>
        </MButton>
    </MToolbar>

    <MList>
        @foreach (var item in items)
        {
            <MListGroup
                @bind-Value="item.Active"
                PrependIcon="@item.Action"
                NoAction>
                <ActivatorContent>
                    <MListItemContent>
                        <MListItemTitle>@item.Title</MListItemTitle>
                    </MListItemContent>
                </ActivatorContent>

                <ChildContent>
                    @foreach (var subItem in item.Items)
                    {
                        <MListItem
                            Value="subItem.Title">
                            <MListItemContent>
                                <MListItemTitle>@item.Title</MListItemTitle>
                            </MListItemContent>
                        </MListItem>
                    }
                </ChildContent>
            </MListGroup>
        }
    </MList>
</MCard>

