<MRow Justify="JustifyTypes.SpaceAround">
    <MMenu
        Bottom
        Origin="center center"
        Transition="scale-transition">
        <ActivatorContent>
            <MButton
                Color="primary"
                Dark
                @attributes="@context.Attrs">
                Scale Transition
            </MButton>
        </ActivatorContent>

        <ChildContent>
            <MList>
                @foreach (var item in items)
                {
                    <MListItem>
                        <MListItemContent>
                            <MListItemTitle>
                                @item
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                }
            </MList>
        </ChildContent>
    </MMenu>

    <MMenu
        Transition="slide-x-transition"
        Bottom
        Right>
        <ActivatorContent>
            <MButton
                Class="deep-orange"
                Color="primary"
                Dark
                @attributes="@context.Attrs">
                Slide X Transition
            </MButton>
        </ActivatorContent>

        <ChildContent>
            <MList>
                @foreach (var item in items)
                {
                    <MListItem>
                        <MListItemContent>
                            <MListItemTitle>
                                @item
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                }
            </MList>
        </ChildContent>
    </MMenu>

    <MMenu
        Transition="slide-y-transition"
        Bottom>
        <ActivatorContent>
            <MButton
                Class="purple"
                Color="primary"
                Dark
                @attributes="@context.Attrs">
                Slide Y Transition
            </MButton>
        </ActivatorContent>

        <ChildContent>
            <MList>
                @foreach (var item in items)
                {
                    <MListItem>
                        <MListItemContent>
                            <MListItemTitle>
                                @item
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                }
            </MList>
        </ChildContent>
    </MMenu>
</MRow>

@code {

    string[] items =
    {
        "Click Me",
        "Click Me",
        "Click Me",
        "Click Me 2"
    };

}