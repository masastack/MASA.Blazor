<MFooter Dark Padless>
    <MCard Flat Tile Class="indigo lighten-1 white--text text-center">
        <MCardText>
            @foreach (var icon in _icons)
            {
                <MButton Class="mx-4 white--text" Icon>
                    <MIcon Size="24">@icon</MIcon>
                </MButton>
            }
        </MCardText>

        <MCardText Class="white--text pt-0">
            @_description
        </MCardText>
        
         <MDivider></MDivider>

        <MCardText Class="white--text">
            @DateTime.Now.Year - <strong>MASA Blazor</strong>
        </MCardText>
    </MCard>
</MFooter>

