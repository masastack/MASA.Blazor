@using Masa.Blazor.JSComponents.DriverJS

<MDriverJS @ref="_driverJs"></MDriverJS>

<MButton Color="primary"
         Class="text-none"
         OnClick="@HighlightTitle">
    Highlight the title
</MButton>

@code {

    private MDriverJS? _driverJs;

    private void HighlightTitle()
    {
        _driverJs?.Highlight(".app-heading", p =>
        {
            p.Title = "Tour component";
            p.Description = "This component is based on Driver.js!";
            p.ShowButtons = [PopoverButton.Next, PopoverButton.Close];
        });
    }

}