<MCard Class="overflow-hidden">
    <MAppBar Collapse="!collapseOnScroll"
             Style="border-bottom-right-radius: 0 !important;"
             CollapseOnScroll="collapseOnScroll"
             Absolute
             Color="deep-purple accent-4"
             Dark
             ScrollTarget="#scrolling-techniques-6">
        <MAppBarNavIcon></MAppBarNavIcon>
        <MAppBarTitle>Collapsing Bar</MAppBarTitle>
        <MSpacer></MSpacer>
        <MCheckbox @bind-Value="collapseOnScroll" Color="white" HideDetails="true"></MCheckbox>
    </MAppBar>
    <MSheet Class="overflow-y-auto" MaxHeight="600" Id="scrolling-techniques-6">
        <MContainer Style="height: 1000px;"></MContainer>
    </MSheet>
</MCard>

@code {
    bool collapseOnScroll = true;
}