<MContainer>
    <MProgressLinear @bind-Value="@_power" Color="amber" Height="25"></MProgressLinear>
</MContainer>
<MContainer>
    <MProgressLinear @bind-Value="@_skill" Color="blue-grey" Height="25">
        <strong>@($"{context}%")</strong>
    </MProgressLinear>
</MContainer>
<MContainer>
    <MProgressLinear @bind-Value="@_knowledge" Height="25">
        <strong>@($"{context}%")</strong>
    </MProgressLinear>
</MContainer>

@code {
    private double _skill = 20;
    private double _knowledge = 33;
    private double _power = 78;
}
