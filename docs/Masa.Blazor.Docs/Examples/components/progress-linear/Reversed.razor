<MContainer>
    <MProgressLinear Color="pink" Value="15" Reverse></MProgressLinear>
</MContainer>
<MContainer>
    <MProgressLinear Color="lime" Indeterminate Reverse></MProgressLinear>
</MContainer>
<MContainer>
    <MProgressLinear BufferValue="55" Color="success" Reverse Stream Value="30"></MProgressLinear>
</MContainer>
<br>
<MSubheader>In specific cases you may want progress to display in left-to-right mode regardless of the application direction (LTR or RTL):</MSubheader>
<MContainer>
    <MProgressLinear Reverse="@_rtl" Value="15"></MProgressLinear>
</MContainer>

@code {
    private bool _rtl = false;
}
