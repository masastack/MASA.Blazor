@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<MApp>

    @Body

    <MButton Dark Fab Fixed Bottom Right Href="@ComputedHref" Color="primary">
        <MIcon>mdi-github</MIcon>
    </MButton>
</MApp>


@code {
    static readonly string s_url = "https://github.com/masastack/MASA.Blazor/blob/main/docs/Masa.Blazor.Docs/Examples/getting-started/wireframes/{0}.razor";

    private string ComputedHref
    {
        get
        {
            var segments = NavigationManager.GetSegments();

            return string.Format(s_url, segments.Last().ToPascal());
        }
    }

}
