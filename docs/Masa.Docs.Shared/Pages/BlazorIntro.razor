@inject MasaBlazor MasaBlazor                    
@inject IPopupService PopupService
@inject I18n I18n

<MRow>
    <MCol Cols="12" Md="6">
        <MRow>
            <MCol Cols="12">
                <IntroCard TitlePath="getting-started"
                           OpenInNewUrl="/blazor/getting-started/installation"
                           MarkdownSourcePath="intro.blazor.getting-started">
                    <Markup Code="dotnet new install MASA.Template" Class="mb-4" Language="bash"></Markup>
                    <Markup Code="dotnet new blazor -o BlazorApp -ai" Language="bash"></Markup>
                </IntroCard>
            </MCol>
            <MCol Cols="12">
                <IntroCard TitlePath="icon-fonts"
                           OpenInNewUrl="/blazor/features/icon-fonts"
                           MarkdownSourcePath="intro.blazor.icons">
                    <MIcon Color="secondary">mdi-code-json</MIcon>
                    <MIcon Color="primary">$masaStack</MIcon>
                    <MIcon Color="primary">$masaFramework</MIcon>
                    <MIcon Color="primary">$masaBlazor</MIcon>
                    <MIcon Color="pink lighten-3">mdi-human-greeting-variant</MIcon>
                </IntroCard>
            </MCol>
            <MCol Cols="12">
                <IntroCard TitlePath="utility-classes"
                           OpenInNewUrl="/blazor/styles-and-animations/border-radius"
                           MarkdownSourcePath="intro.blazor.utility-classes">
                </IntroCard>
            </MCol>
        </MRow>
    </MCol>
    <MCol Cols="12" Md="6">
        <MRow>
            <MCol Cols="12">
                <IntroCard TitlePath="i18n"
                           OpenInNewUrl="/blazor/features/internationalization"
                           MarkdownSourcePath="intro.blazor.i18n">
                    <MSwitch Value="Culture"
                             ValueChanged="CultureChange"
                             TValue="string"
                             TrueValue="@("CN")"
                             FalseValue="@("EN")"
                             LeftText="EN"
                             RightText="CN"
                             Color="primary"
                             HideDetails="@true">
                    </MSwitch>
                </IntroCard>
            </MCol>
            <MCol Cols="12">
                <IntroCard TitlePath="theme"
                           OpenInNewUrl="/blazor/features/theme"
                           MarkdownSourcePath="intro.blazor.theme">
                    <MSwitch Value="@MasaBlazor.Theme.Dark"
                             ValueChanged="val => MasaBlazor.ToggleTheme()"
                             TValue="bool"
                             LeftText="L"
                             RightText="D"
                             Color="primary"
                             HideDetails="@true">
                    </MSwitch>
                </IntroCard>
            </MCol>
            <MCol Cols="12">
                <IntroCard TitlePath="components"
                           OpenInNewUrl="/blazor/components/alerts"
                           MarkdownSourcePath="intro.blazor.components">
                    <MCard Outlined>
                        <MCardText>
                            <MForm @ref="_form">
                                <MTextField @bind-Value="@Name" Label="Name" Outlined
                                            Required Dense Clearable
                                            PrependInnerIcon="mdi-account-outline">
                                </MTextField>
                                <MTextField @bind-Value="@Password" Type="password" Label="Password" Outlined
                                            Required Dense Clearable
                                            PrependInnerIcon="mdi-lock-outline">
                                </MTextField>
                                <MButton Color="primary" Block OnClick="@Commit" Loading="@_loading">Commit</MButton>
                            </MForm>
                        </MCardText>
                    </MCard>
                </IntroCard>
            </MCol>
        </MRow>
    </MCol>
</MRow>
