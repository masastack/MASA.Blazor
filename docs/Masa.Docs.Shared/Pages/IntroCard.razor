@inject I18n I18n

<MCard Outlined>
    <MCardTitle Class="d-flex align-start justify-space-between">
        @I18n.T(TitlePath)
        <MButton Href="@OpenInNewUrl" Small Icon Text>
            <MIcon Small>
                mdi-arrow-expand
            </MIcon>
        </MButton>
    </MCardTitle>
    <MCardText>
        @if (MarkdownSourcePath is not null)
        {
            <DocumentMarkdownIt Source="@I18n.T(MarkdownSourcePath)" />
        }
        else if (MarkdownSource is not null)
        {
            <DocumentMarkdownIt Source="@MarkdownSource" />
        }

        @ChildContent
    </MCardText>
</MCard>

@code {

    [CascadingParameter(Name = "Culture")] private string? Culture { get; set; }

    [Parameter] [EditorRequired] public string TitlePath { get; set; } = default!;

    [Parameter] [EditorRequired] public string OpenInNewUrl { get; set; } = default!;

    [Parameter] public string? MarkdownSourcePath { get; set; }

    [Parameter] public string? MarkdownSource { get; set; }

    [Parameter] public RenderFragment? ChildContent { get; set; }

}
