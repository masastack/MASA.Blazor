@inject I18n I18n
@typeparam TItem where TItem : IDefaultItem<TItem>

<MListItem Href="@Item.Href"
           Exact="@Item.Exact"
           Target="@Item.Target"
           Class="m-list-item--default">
    @if (Item?.Icon is not null)
    {
        <MListItemIcon>
            <MIcon>@Item.Icon</MIcon>
        </MListItemIcon>
    }

    <NavItemContent Item="Item" />

</MListItem>

@code {

    [Parameter, EditorRequired]
    public TItem Item { get; set; } = default!;

}
