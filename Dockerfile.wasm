FROM registry.cn-hangzhou.aliyuncs.com/masa/dotnet_sdk:6.0.100_nodejs16_wasm_emsdk_ossutil AS base
ARG OSSCONFIG
WORKDIR /app
RUN echo  $OSSCONFIG |wc -L
COPY . .
RUN dotnet publish "./src/Doc/Masa.Blazor.Doc.WebAssembly/Masa.Blazor.Doc.WebAssembly.csproj" -c Release -o /app/publish && ls -l /usr/local/bin/ossutil  
RUN cd /app/publish && echo $OSSCONFIG | base64 --decode >test.config &&/usr/local/bin/ossutil  cp  -rf wwwroot/  oss://masa-blazor-wasm/ --config-file test.config

FROM caddy:alpine
WORKDIR /app
COPY --from=base /app/publish/wwwroot /usr/share/caddy/
