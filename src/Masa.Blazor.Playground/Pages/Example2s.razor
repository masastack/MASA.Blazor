    private string[] _items1 = ["Emily", "Alex", "Sarah", "Michael", "Anna"];
    private string[] _items2 = ["Emily", "Alex", "Sarah", "Michael", "Anna"];

    private IEnumerable<string> _order1 = [];
    private IEnumerable<string> _order2 = [];


