<MRow>
    <MCol Cols="6">
        <div>
            Order: @string.Join(", ", _order1)
        </div>
        <MList Dense>
            <MSortable Items="@_items1"
                       ItemKey="u => u"
                       @bind-Order="_order1"
                       Group="people"
                       GhostClass="accent">
                <MListItem>@context</MListItem>
                <MDivider/>
            </MSortable>
        </MList>
    </MCol>
    <MCol Cols="6">
        <div>
            Order: @string.Join(", ", _order2)
        </div>
        <MList Dense>
            <MSortable Items="@_items2"
                       ItemKey="u => u"
                       @bind-Order="_order2"
                       Group="people"
                       GhostClass="accent">
                <MListItem>@context</MListItem>
                <MDivider/>
            </MSortable>
        </MList>
    </MCol>
</MRow>


@code {

