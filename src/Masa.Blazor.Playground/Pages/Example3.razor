                <MDivider/>
            </MSortable>
        </MList>
    </MCol>
    <MCol Cols="4">
        <MList Dense>
            <MSortable Items="@_woman"
                       ItemKey="u => u"
                       Group="woman"
                       GhostClass="accent">
