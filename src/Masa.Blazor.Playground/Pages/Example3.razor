                <MDivider/>
            </MSortable>
        </MList>
    </MCol>
    <MCol Cols="4">
        <MList Dense>
            <MSortable Items="@_peoples"
                       ItemKey="u => u"
                       Group="people"
                       GhostClass="accent">
