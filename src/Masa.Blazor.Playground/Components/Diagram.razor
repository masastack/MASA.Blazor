<MCard Elevation="4" Outlined
       @ondblclick="@OnDblClick">
    <MCardTitle>
        @if (!string.IsNullOrWhiteSpace(Icon))
        {
            <MIcon Class="mr-1">@Icon</MIcon>
        }

        @Title
    </MCardTitle>

    @if (ChildContent is not null)
    {
        <MDivider />
        <MCardText>
            @ChildContent
        </MCardText>
    }
</MCard>

