@attribute [JSCustomElement("wireframe-examples")]

<MRow>
    @foreach (var name in _wireframes)
    {
        <MCol Cols="12" Md="6" Lg="4">
            <a class="text-dec-none" target="_blank" href="@($"{Navigation.BaseUri}examples/wireframes/{HandleWireframeName(name)}")">
                <AppFigure alt="@($"{name} layout")"
                           AspectRatio="@(16/9d)"
                           Name="@name"
                           Outlined
                           Src="@($"https://cdn.masastack.com/stack/doc/blazor/wireframes/{HandleWireframeName(name)}.svg")">
                </AppFigure>
            </a>
        </MCol>
    }
</MRow>


@code {
    [Inject]
    public NavigationManager Navigation { get; set; } = default!;

    List<string> _wireframes = new List<string>
    {
        "Base",
        "Extended Toolbar",
        "System Bar",
        "Inbox",
        "Constrained",
        "Side Navigation",
        "Three Column",
        "Discord"
    };

    string HandleWireframeName(string name)
    {
        return name.ToLower().Replace(" ", "-");
    }
}