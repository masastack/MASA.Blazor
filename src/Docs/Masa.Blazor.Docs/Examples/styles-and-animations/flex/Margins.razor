<div>
    <MCard Class="d-flex mb-6" Color="grey lighten-2" Flat Tile>
        @for (var i = 1; i <= 3; i++)
        {
            <MCard Class="pa-2" Outlined Tile>
                Flex item
            </MCard>
        }
    </MCard>

    <MCard Class="d-flex mb-6" Color="grey lighten-2" Flat Tile>
        @for (var i = 1; i <= 3; i++)
        {
            var n = i;
            <MCard Class="@($"pa-2 {(n == 1 ? "mr-auto": "")}")" Outlined Tile>
                Flex item
            </MCard>
        }
    </MCard>

    <MCard Class="d-flex mb-6" Color="grey lighten-2" Flat Tile>
        @for (var i = 1; i <= 3; i++)
        {
            var n = i;
            <MCard Class="@($"pa-2 {(n == 3 ? "ml-auto": "")}")" Outlined Tile>
                Flex item
            </MCard>
        }
    </MCard>
</div>