<MRow>
    <MCol Class="pa-12">
        <MRangeSlider TickLabels="_seasons"
                      Value="_value"
                      Min="0"
                      Max="3"
                      Ticks="@("always")"
                      TickSize="4">
            <ThumbLabelContent>
                <MIcon Dark>
                    @($" {_icons[Convert.ToInt32(context)]} ")
                </MIcon>
            </ThumbLabelContent>
        </MRangeSlider>
    </MCol>
</MRow>

@code {
    private IList<double> _value = new List<double>
        {
            0,
            1
        };
    private List<string> _seasons = new List<string>
        {
            "Winter",
            "Spring",
            "Summer",
            "Fall"
        };
    private List<string> _icons = new List<string>
        {
            "mdi-snowflake",
            "mdi-leaf",
            "mdi-fire",
            "mdi-water"
        };
}

