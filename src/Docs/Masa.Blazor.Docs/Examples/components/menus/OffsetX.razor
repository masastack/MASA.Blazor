<div class="text-center">
    <MSwitch @bind-Value="offset" Label="X offset"></MSwitch>

    <MMenu OffsetX="@offset" Top>
        <ActivatorContent>
            <MButton Color="primary" @attributes="@context.Attrs">DROPDOWN</MButton>
        </ActivatorContent>

        <ChildContent>
            <MList>
                @foreach (var item in items)
                {
                    <MListItem>
                        <MListItemContent>
                            <MListItemTitle>
                                @item
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                }
            </MList>
        </ChildContent>
    </MMenu>
</div>

@code {

    string[] items =
    {
        "Click Me",
        "Click Me",
        "Click Me",
        "Click Me 2"
    };

    bool offset = true;
}