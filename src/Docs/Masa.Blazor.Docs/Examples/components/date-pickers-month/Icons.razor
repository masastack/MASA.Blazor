<MRow Justify="@JustifyTypes.Center">
    <MDatePicker @bind-Value="_picker"
                 Type="DatePickerType.Month"
                 YearIcon="mdi-calendar-blank"
                 PrevIcon="mdi-skip-previous"
                 NextIcon="mdi-skip-next"></MDatePicker>
</MRow>

@code {
    private DateOnly _picker = DateOnly.FromDateTime(DateTime.Now);
}