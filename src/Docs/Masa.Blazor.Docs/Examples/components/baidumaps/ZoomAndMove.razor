<MBaiduMap Height="400"
           DarkThemeId="9828881e7efb0182edb48236a3b53293"
           EnableScrollWheelZoom
           Style="width:90%; left:5%"
           MaxZoom="15" MinZoom="8"
           @ref="Map" />

<MRow Align="@AlignTypes.Center" Justify="@JustifyTypes.SpaceAround" Style="margin: 18px auto">

    <MButton Color="primary" OnClick="@ZoomIn">Zoom In</MButton>

    <MButton Color="primary" OnClick="@ZoomOut">Zoom Out</MButton>

    <MButton Color="primary" OnClick="@GoToBeijing">Go To Beijing</MButton>

</MRow>

@code
{
    public MBaiduMap? Map { get; set; }

    private void ZoomIn() => Map.Zoom += 1;

    private void ZoomOut() => Map.Zoom -= 1;

    private void GoToBeijing() => Map.Center = new(116.403f, 39.917f);
}