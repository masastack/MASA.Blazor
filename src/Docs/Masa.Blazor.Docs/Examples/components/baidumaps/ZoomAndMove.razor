<MBaiduMap Height="400"
           DarkThemeId="9828881e7efb0182edb48236a3b53293"
           EnableScrollWheelZoom="@EnableScrollWheelZoom"
           Style="width:90%; left:5%"
           Center="@Center" Zoom="@Zoom"
           @ref="Map" />

<MRow Align="@AlignTypes.Center" Justify="@JustifyTypes.SpaceAround" Style="margin: 18px auto">

    <MButton Color="primary" OnClick="@ZoomIn">Zoom In</MButton>

    <MButton Color="primary" OnClick="@ZoomOut">Zoom Out</MButton>

    <MButton Color="primary" OnClick="@GoToBeijing">Go To Beijing</MButton>

</MRow>

@code
{
    public MBaiduMap? Map { get; set; }

    public bool EnableScrollWheelZoom { get; set; } = false;

    public float Zoom { get; set; } = 10;

    public GeoPoint Center { get; set; } = new(116.403f, 39.917f);

    private void ZoomIn()
    {
        if (Zoom < MBaiduMap.DefaultMaxZoom)
            Zoom += 1;
    }

    private void ZoomOut()
    {
        if (Zoom > MBaiduMap.DefaultMinZoom)
            Zoom -= 1;
    }

    private void GoToBeijing() => Center = new(116.403f, 39.917f);
}