@namespace Masa.Docs.Shared.Components

<figure>
    <MSheet Outlined="Outlined">
        <MImage @attributes="Attributes" Src="@Src"></MImage>
    </MSheet>

    @if (ChildContent is not null)
    {
        @ChildContent
    }

    @if (!string.IsNullOrWhiteSpace(Name) && ChildContent is null)
    {
        <figcaption class="text-subtitle-2 text-center text-capitalize mt-3">@Name</figcaption>
    }
</figure>

@code {
    [Parameter]
    public bool Outlined { get; set; }

    [Parameter, EditorRequired]
    public string Src { get; set; } = null!;

    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object> Attributes { get; set; } = new();

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? Name { get; set; }
}
