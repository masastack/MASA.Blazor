@namespace Masa.Docs.Shared.Components

<div class="markdown-content">
    <MMarkdownIt Source="@Source"
                 AnchorOptions="@AnchorOptions"
                 OnTocParsed="@OnTocParsed"
                 OnFrontMatterParsed="@OnFrontMatterParsed"
                 Html
                 Linkify
                 Typographer
                 HeaderSections
                 Scope="document">
    </MMarkdownIt>
</div>

@code {

    [Parameter, EditorRequired]
    public string? Source { get; set; }

    [Parameter]
    public EventCallback<List<MarkdownItTocContent>?> OnTocParsed { get; set; }

    [Parameter]
    public EventCallback<string?> OnFrontMatterParsed { get; set; }

    private static readonly MarkdownItAnchorOptions AnchorOptions = new()
    {
        Level = 1,
        PermalinkClass = "",
        PermalinkSymbol = ""
    };
}
