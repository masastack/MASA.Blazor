<MRow Justify=JustifyTypes.Center>

    <MMenu Transition="scroll-x-transition">

        <ActivatorContent>
            <MButton Class="ma-2" Color="primary" @attributes="context.Attrs">
               Scroll X Transition
            </MButton>
        </ActivatorContent>

        <ChildContent>
            <MList>
                @for (var i = 0; i < 5; i++)
                {
                    <MListItem>
                        <MListItemTitle>
                            @("Item"+i)
                        </MListItemTitle>
                    </MListItem>
                }
            </MList>
        </ChildContent>

    </MMenu>

    <div class="mx-4 hidden-sm-and-down"></div>

     <MMenu Transition="scroll-x-reverse-transition">

        <ActivatorContent>
            <MButton Class="ma-2" Color="secondary" @attributes="context.Attrs">
               Scroll X Reverse Transition
            </MButton>
        </ActivatorContent>

        <ChildContent>
            <MList>
                @for (var i = 0; i < 5; i++)
                {
                    <MListItem>
                        <MListItemTitle>
                            @("Item"+i)
                        </MListItemTitle>
                    </MListItem>
                }
            </MList>
        </ChildContent>

    </MMenu>

</MRow>