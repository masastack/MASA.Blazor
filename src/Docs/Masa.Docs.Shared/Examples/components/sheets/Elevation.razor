<MContainer>
    <MRow Justify="@JustifyTypes.SpaceAround">
        @foreach (var elevation in _elevations)
        {
            <MCol Cols="12"
                  Md="4">
                <MSheet Class="pa-12"
                        Color="grey lighten-3">
                    <MSheet Elevation="elevation"
                            Class="mx-auto"
                            Height="100"
                            Width="100"></MSheet>
                </MSheet>
            </MCol>
        }

    </MRow>
</MContainer>

@code{
    private int[] _elevations = new int[]
    {
        6,12,18
    };
}


