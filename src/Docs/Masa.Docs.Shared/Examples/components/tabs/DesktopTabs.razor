<MCard>
    <MToolbar Flat>
        <ChildContent>
            <MAppBarNavIcon></MAppBarNavIcon>

            <MToolbarTitle>Contact Database</MToolbarTitle>

            <MSpacer></MSpacer>

            <MButton Icon>
                <MIcon>mdi-magnify</MIcon>
            </MButton>

            <MButton Icon>
                <MIcon>mdi-dots-vertical</MIcon>
            </MButton>
        </ChildContent>

        <ExtensionContent>
            <MTabs
                @bind-Value="tabs"
                FixedTabs>
                <MTab
                    Value="@("mobile-tabs-5-1")"
                    Class="primary--text">
                    <MIcon>mdi-phone</MIcon>
                </MTab>

                <MTab
                    Value="@("mobile-tabs-5-2")"
                    Class="primary--text">
                    <MIcon>mdi-heart</MIcon>
                </MTab>

                <MTab
                    Value="@("mobile-tabs-5-3")"
                    Class="primary--text">
                    <MIcon>mdi-account-box</MIcon>
                </MTab>
            </MTabs>
        </ExtensionContent>
    </MToolbar>

    <MTabsItems Value="tabs">
        @foreach (var item in Enumerable.Range(1, 3))
        {
            <MTabItem
                Value="@($"mobile-tabs-5-{item}")">
                <MCard Flat>
                    <MCardText>@text</MCardText>
                </MCard>
            </MTabItem>
        }
    </MTabsItems>
</MCard>

@code {

    StringNumber tabs;

    string text = "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.";

}