<MCard>
    <MMonacoEditor @ref="_editor" EditorOptions="@EdtiorOptions" Width="@("100%")" Height="@("500px")" />
</MCard>

@code {
    private MMonacoEditor _editor;

    private EditorOptions EdtiorOptions { get; set; } = new()
    {
        Value = @"using System;
                  namespace HelloWorldApplication
                  {
                        class HelloWorld
                        {
                            static void Main(string[] args)
                            {
                                Console.WriteLine();
                                Console.ReadKey();
                            }
                         }
                  }",
        Language = "csharp"
    };

}