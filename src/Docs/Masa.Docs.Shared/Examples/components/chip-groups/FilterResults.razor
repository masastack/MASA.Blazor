<MCard
    Class="mx-auto"
    MaxWidth="400">
    <MToolbar
        Flat
        Color="deep-purple accent-4"
        Dark>
        <MButton Icon>
            <MIcon>mdi-close</MIcon>
        </MButton>
        <MToolbarTitle>Filter results</MToolbarTitle>
    </MToolbar>

    <MCardText>
        <h2 class="text-h6 mb-2">
            Choose amenities
        </h2>

        <MChipGroup
            @bind-Values="amenities"
            Column
            Multiple>
            <MChip
                Filter
                Outlined>
                Elevator
            </MChip>
            <MChip
                Filter
                Outlined>
                Washer / Dryer
            </MChip>
            <MChip
                Filter
                Outlined>
                Fireplace
            </MChip>
            <MChip
                Filter
                Outlined>
                Wheelchair access
            </MChip>
            <MChip
                Filter
                Outlined>
                Dogs ok
            </MChip>
            <MChip
                Filter
                Outlined>
                Cats ok
            </MChip>
        </MChipGroup>
    </MCardText>

    <MCardText>
        <h2 class="text-h6 mb-2">
            Choose neighborhoods
        </h2>

        <MChipGroup
            @bind-Values="neighborhoods"
            Column
            Multiple>
            <MChip
                Filter
                Outlined>
                Snowy Rock Place
            </MChip>
            <MChip
                Filter
                Outlined>
                Honeylane Circle
            </MChip>
            <MChip
                Filter
                Outlined>
                Donna Drive
            </MChip>
            <MChip
                Filter
                Outlined>
                Elaine Street
            </MChip>
            <MChip
                Filter
                Outlined>
                Court Street
            </MChip>
            <MChip
                Filter
                Outlined>
                Kennedy Park
            </MChip>
        </MChipGroup>
    </MCardText>
</MCard>

@code {

    List<StringNumber> amenities = new() {1, 4};
    List<StringNumber> neighborhoods = new() {1};

}