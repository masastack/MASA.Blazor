<MCard
    MaxWidth="475"
    Class="mx-auto">
    <MToolbar
        Color="teal"
        Dark>
        <MAppBarNavIcon></MAppBarNavIcon>

        <MToolbarTitle>Settings</MToolbarTitle>
    </MToolbar>

    <MList
        TwoLine
        Subheader>
        <MSubheader>General</MSubheader>

        <MListItem>
            <MListItemContent>
                <MListItemTitle>Profile photo</MListItemTitle>
                <MListItemSubtitle>Change your Google+ profile photo</MListItemSubtitle>
            </MListItemContent>
        </MListItem>

        <MListItem>
            <MListItemContent>
                <MListItemTitle>Show your status</MListItemTitle>
                <MListItemSubtitle>Your status is visible to everyone</MListItemSubtitle>
            </MListItemContent>
        </MListItem>
    </MList>

    <MDivider></MDivider>

    <MList
        Subheader
        TwoLine
        Flat>
        <MSubheader>Hangout notifications</MSubheader>

        <MListItemGroup
            @bind-Values="settings"
            multiple>
            <MListItem>
                <ItemContent>
                    <MListItemAction>
                        <MCheckbox
                            Value="context.Active"
                            Color="primary">
                        </MCheckbox>
                    </MListItemAction>

                    <MListItemContent>
                        <MListItemTitle>Notifications</MListItemTitle>
                        <MListItemSubtitle>Allow notifications</MListItemSubtitle>
                    </MListItemContent>
                </ItemContent>
            </MListItem>

            <MListItem>
                <ItemContent>
                    <MListItemAction>
                        <MCheckbox
                            Value="context.Active"
                            Color="primary">
                        </MCheckbox>
                    </MListItemAction>

                    <MListItemContent>
                        <MListItemTitle>Sound</MListItemTitle>
                        <MListItemSubtitle>Hangouts message</MListItemSubtitle>
                    </MListItemContent>
                </ItemContent>
            </MListItem>

            <MListItem>
                <ItemContent>
                    <MListItemAction>
                        <MCheckbox
                            Value="context.Active"
                            Color="primary">
                        </MCheckbox>
                    </MListItemAction>

                    <MListItemContent>
                        <MListItemTitle>Video sounds</MListItemTitle>
                        <MListItemSubtitle>Hangouts video call</MListItemSubtitle>
                    </MListItemContent>
                </ItemContent>
            </MListItem>

            <MListItem>
                <ItemContent>
                    <MListItemAction>
                        <MCheckbox
                            Value="context.Active"
                            Color="primary">
                        </MCheckbox>
                    </MListItemAction>

                    <MListItemContent>
                        <MListItemTitle>Invites</MListItemTitle>
                        <MListItemSubtitle>Notify when receiving invites</MListItemSubtitle>
                    </MListItemContent>
                </ItemContent>
            </MListItem>
        </MListItemGroup>
    </MList>
</MCard>

@code {

    List<StringNumber> settings = new();

}