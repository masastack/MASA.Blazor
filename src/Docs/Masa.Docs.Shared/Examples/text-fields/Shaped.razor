<MForm>
    <MContainer>
        <MRow>
            <MCol Cols="12"
                  Sm="6">
                <MTextField @bind-Value="_first"
                            Label="First Name"
                            Outlined
                            Shaped></MTextField>
            </MCol>

            <MCol Cols="12"
                  Sm="6">
                <MTextField @bind-Value="_last"
                            Label="Last Name"
                            Filled
                            Shaped></MTextField>
            </MCol>
        </MRow>
    </MContainer>
</MForm>

@code{
    private string _first;
    private string _last;
}