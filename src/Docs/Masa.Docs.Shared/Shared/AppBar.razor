@using System.Globalization
@inject MasaBlazor MasaBlazor

<MAppBar Id="app-bar"
         App
         Class="m-bar--underline"
         Flat
         ClippedRight
         Color="white"
         Height="@(MasaBlazor.Breakpoint.Xs ? AppService.MobileAppBarHeight : AppService.AppBarHeight)">
    <MAppBarNavIcon Class="hidden-lg-and-up emphasize2-color" @onclick="OnAppBarNavIconClecked" />
    <AppBarItems OnCultureChanged="OnCultureChanged"
                 OnDotClicked="OnDotClicked"></AppBarItems>
</MAppBar>

@code {

    [CascadingParameter]
    public CultureInfo Culture { get; set; } = null!;

    [Parameter]
    public EventCallback<string> OnCultureChanged { get; set; }

    [Parameter]
    public EventCallback OnAppBarNavIconClecked { get; set; }

    [Parameter]
    public EventCallback OnDotClicked { get; set; }

}
