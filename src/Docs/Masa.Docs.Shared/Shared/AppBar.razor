@using System.Globalization
@inject MasaBlazor MasaBlazor

<MAppBar Id="app-bar"
         App
         Class="m-bar--underline"
         Flat
         ClippedRight
         Color="white"
         Height="@AppService.AppBarHeight">
    @if (MasaBlazor.Breakpoint.XsOnly)
    {
        <MAppBarNavIcon />
    }
    <AppBarItems OnCultureChanged="OnCultureChanged"></AppBarItems>
</MAppBar>

@code {

    [CascadingParameter]
    public CultureInfo Culture { get; set; } = null!;

    [Parameter]
    public EventCallback<string> OnCultureChanged { get; set; }

}
