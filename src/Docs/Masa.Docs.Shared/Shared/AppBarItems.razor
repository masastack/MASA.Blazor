@inject I18n I18n
@inject MasaBlazor MasaBlazor

<div class="flex-1-1-auto d-flex align-center justify-end">
    <Tabs />

    @if (MasaBlazor.Breakpoint.SmOnly)
    {
        <VerticalDivider />
    }

    @if (MasaBlazor.Breakpoint.XsOnly)
    {
        <MSpacer />
    }

    <Search />

    <LanguageMenu OnCultureChanged="@OnCultureChanged" />

    <MButton Icon
             Href="https://github.com/BlazorComponent/Masa.Blazor"
             Target="_blank"
             Class="mr-3 ml-2">
        <MIcon Size=24 Class="emphasize1-color">fab fa-github</MIcon>
    </MButton>
    <MButton Icon
             Href="https://gitee.com/blazorcomponent/MASA.Blazor"
             Target="_blank"
             Class="mr-3">
        <img style="width:24px;height:24px;" src="https://cdn.masastack.com/stack/images/website/masa-blazor/gitee.png" />
    </MButton>
    <MButton Icon
             Class="mr-8">
        <MIcon Class="emphasize1-color">
            mdi-cog
        </MIcon>
    </MButton>
</div>


@code {

    [Parameter]
    public EventCallback<string> OnCultureChanged { get; set; }

}
