@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<MApp>

    @Body

    <MButton Dark Fab Class="bottom-btn" Target="_blank" Href="@_url" Color="primary">
        <MIcon>mdi-github</MIcon>
    </MButton>
</MApp>


@code {
    const string? _baseUrl = "https://github.com/BlazorComponent/MASA.Blazor/tree/feature/application/src/Docs/Masa.Docs.Shared/";
    string? _url;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            string pageUrl = NavigationManager.Uri.Substring(NavigationManager.BaseUri.Length);

            _url = _baseUrl + pageUrl;
        }
    }
}