@namespace Masa.Blazor.Presets
@inherits PDateTimePickerViewBase<TValue>
@typeparam TValue

<div class="@BasePickerBlock.Element("view") @Block.Element("view")">
    <MDatePicker Value="InternalDate"
                 ValueChanged="DateChanged"
                 TValue="DateOnly?"
                 AllowedDates="@AllowedDates"
                 ActivePicker="@ActiveDatePicker"
                 Color="@Color"
                 DayFormat="@DayFormat"
                 Disabled="@Disabled"
                 FirstDayOfWeek="@FirstDayOfWeek"
                 Locale="@Locale"
                 Max="@MaxDate"
                 Min="@MinDate"
                 MonthFormat="@MonthFormat"
                 NoTitle
                 NextIcon="@NextIcon"
                 PrevIcon="@PrevIcon"
                 Reactive="@Reactive"
                 Readonly="@Readonly"
                 Scrollable="@Scrollable"
                 ShowAdjacentMonths="@ShowAdjacentMonths"
                 ShowCurrent="@ShowCurrent"
                 ShowWeek="@ShowWeek"
                 WeekdayFormat="@WeekdayFormat"
                 YearFormat="@YearFormat"
                 YearIcon="@YearIcon"
                 Dark="@Dark"
                 Light="@Light">
    </MDatePicker>

    <MDivider Vertical Style="margin: 0" />

    <MDigitalClock Value="InternalTime"
                   ValueChanged="TimeChanged"
                   TValue="TimeOnly?"
                   Color="@(Color ?? "accent")"
                   Disabled="@Disabled"
                   Format="@TimeFormat"
                   Readonly="@Readonly"
                   UseSeconds="@UseSeconds"
                   Dark="@Dark"
                   Light="@Light"
                   Height="290">
    </MDigitalClock>
</div>
