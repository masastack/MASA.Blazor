@namespace Masa.Blazor
@inherits BDomComponentBase

<Element Tag="@Tag"
         Class="@CssProvider.GetClass()"
         Style="@CssProvider.GetStyle()"
         ReferenceCaptureAction="u => Ref = u"
         id="@Id">
    <Transition Name="@Transition">
        <IfTransitionElement Class="@CssProvider.GetClass("wrapper")"
                             Value="_isActive">
            @ChildContent
        </IfTransitionElement>
    </Transition>
</Element>
