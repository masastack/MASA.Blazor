<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Masa.Blazor.Maui.Plugin.QrCode.MasaBarcodeReader2"
             xmlns:gv="clr-namespace:BarcodeScanner.Mobile;assembly=BarcodeScanner.Mobile.Maui"
             Title="MasaBarcodeReader2">


	<Grid RowDefinitions="2*,4*,1*,1*">

		<gv:CameraView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" OnDetected="CameraView_OnDetected" Grid.Row="1"
		               TorchOn="False" VibrationOnDetected="False" ScanInterval="50" x:Name="Camera"/>

		<Grid
			Grid.Row="0"
			BackgroundColor="#aa000000">
			<Label Grid.Column="0" Text="请扫描二维码或条形码" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White"/>

		</Grid>

		<Grid
			Grid.Row="2"
			BackgroundColor="#aa000000" ColumnDefinitions="Auto,*,Auto">
			<Button  BackgroundColor="#aa000000" Text="💡"  Grid.Column="1" CornerRadius="8" FontSize="18" TextColor="White" Clicked="ReturnToBlazor_Clicked"/>
		</Grid>

		<Grid
			Grid.Row="3"
			BackgroundColor="#aa000000" ColumnDefinitions="Auto,*,Auto">
			<Button  BackgroundColor="#aa000000" Text="返回"  Grid.Column="1" CornerRadius="8" FontSize="18" TextColor="White" Clicked="ReturnToBlazor_Clicked" />
		</Grid>


	</Grid>
</ContentPage>