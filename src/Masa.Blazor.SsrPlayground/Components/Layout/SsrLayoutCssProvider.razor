@inject MasaBlazor MasaBlazor 

@if (MasaBlazor.IsSsr)
{
    <style id="masa-blazor-ssr-stylesheet"
           type="text/css">
        :root {
          --main-padding-left: @(MasaBlazor.Ssr!.MainPaddingLeft + "px");
          --main-padding-right: @(MasaBlazor.Ssr.MainPaddingRight + "px");
          --main-padding-top: @(MasaBlazor.Ssr.MainPaddingTop + "px");
          --main-padding-bottom: @(MasaBlazor.Ssr.MainPaddingBottom + "px");
          --mobile-breakpoint: @(MasaBlazor.Breakpoint.GetMobileBreakpointValue() + "px")
        } 
    </style>
}
