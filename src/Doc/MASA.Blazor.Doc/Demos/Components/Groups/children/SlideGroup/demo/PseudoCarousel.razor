<MSheet Class="mx-auto" MaxWidth="800" Elevation="8">
    <MSlideGroup @bind-Value="model" ShowArrows="@(true)" Class="pa-4">
        @foreach (var item in Enumerable.Range(1, 15))
        {
            <MSlideItem>
                <MCard Color="@(context.IsActive ? "primary" : "grey lighten-1")" Class="ma-4" Height="200" Width="100" Click="@context.Toggle">
                    <MRow Class="fill-height" Align="AlignTypes.Center" Justify="JustifyTypes.Center">
                        <!--TODO: v-scale-transition -->
                        @if (context.IsActive)
                        {
                            <MIcon Color="white" Size="48">mdi-close-circle-outline</MIcon>
                        }
                    </MRow>
                </MCard>
            </MSlideItem>
        }
    </MSlideGroup>

    @if (model != null)
    {
        <MSheet Height="200" Tile>
            <MRow Class="fill-height" Align="AlignTypes.Center" Justify="JustifyTypes.Center">
                <h3 class="text-h6">
                    Selected @model
                </h3>
            </MRow>
        </MSheet>
    }
</MSheet>

@code {

    StringNumber model;

}