@using System.IO;

<MSwitch @bind-Value="chips" Label="Use chips"></MSwitch>

<MFileInput Files="@files" OnUpload="HandleUpload" Multiple ShowSize Counter Chips="chips" Accept="image/*" @ref="_uploadElementReference">
    <ActivatorContent>
        <MButton Color="primary">Upload</MButton>
    </ActivatorContent>
</MFileInput>

