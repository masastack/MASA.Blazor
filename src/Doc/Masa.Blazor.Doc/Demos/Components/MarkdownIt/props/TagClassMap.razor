<MMarkdownIt Key="TagClassMapDemo" Source="@source" TagClassMap="@tagClassMap" />

@code {

    private string source = @"
# h1 Heading
## h2 Heading
### h3 Heading
#### h4 Heading
";

    private Dictionary<string, string> tagClassMap = new()
    {
        { "h1", "text-h1" },
        { "h2", "text-h2" },
        { "h3", "text-h3" },
        { "h4", "text-h4" },
    };

}

