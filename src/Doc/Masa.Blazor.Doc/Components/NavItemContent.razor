@using Masa.Blazor.Doc.Models

<MListItemContent Class="@(TwoLine ? "py-1" : "")">
    <MListItemTitle>
        @Title
    </MListItemTitle>
    <MListItemSubtitle>
        @SubTitle
    </MListItemSubtitle>
</MListItemContent>

@code {

    [Parameter, EditorRequired]
    public string Title { get; set; }

    [Parameter]
    public string SubTitle { get; set; }

    private bool TwoLine => !string.IsNullOrWhiteSpace(SubTitle);

}
